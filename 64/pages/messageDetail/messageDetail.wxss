.msg-item {
    display: flex;
    margin-bottom: 8rpx;
    padding: 20rpx;
    box-sizing: border-box;
    background-color: #fff;
}

.avatar-con {
    width: 84rpx;
    height: 84rpx;
    border-radius: 50%;
    overflow: hidden;
}

.avatar-con image {
    width: 100%;
    height: 100%;
}

.msg-detail {
    flex: 1;
    padding-left: 36rpx;
}

.username {
    font-size: 28rpx;
    color: #666;
}

.interval {
    font-size: 20rpx;
    color: #bbb;
}

.msg {
    font-size: 32rpx;
    color: #333;
}

.reply-con {
    position: relative;
    width: 100%;
    background-color: #f5f5f5;
    font-size: 28rpx;
    color: #929292;
    padding: 16rpx 16rpx;
    box-sizing: border-box;
    margin-top: 14rpx;
}

.reply-con text {
    white-space: normal;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
}

.triangle {
    position: absolute;
    top: -26rpx;
    left: 50rpx;
    width: 0;
    border-bottom: 14rpx solid #f5f5f5;
    border-left: 10rpx solid transparent;
    border-right: 10rpx solid transparent;
    border-top: 14rpx solid transparent;
}

.options {
    display: flex;
    color: #fc6769;
    font-size: 26rpx;
}

.options .view-post {
    padding: 30rpx 10rpx 10rpx;
}

.options .vertical-text {
    color: #cccccc;
    margin: 0 25rpx;
}

.reply-input {
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    width: 100%;
    justify-content: flex-start;
    align-items: center;
    padding: 20rpx;
    box-sizing: border-box;
    background-color: #eeeeee;
}

.reply-input .send-btn {
    width: 108rpx;
    height: 64rpx;
    line-height: 64rpx;
    text-align: center;
    border-radius: 6rpx;
    font-size: 26rpx;
    color: #fff;
    background-color: #fc6769;
    margin-left: 20rpx;
}

.reply-input textarea {
    width: 496rpx;
    border: 2rpx solid #dfdfdf;
    padding: 20rpx;
    border-radius: 10rpx;
    background-color: #fafafa;
}

.redBag {
    width: 36rpx;
    height: 44rpx;
    margin-right: 20rpx;
}