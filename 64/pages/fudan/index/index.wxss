page {
}

.flex-between-center {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.flex-center-center {
    display: flex;
    justify-content: center;
    align-items: center;
}

.flex-column {
    flex-direction: column;
}

.myfudan {
    position: relative;
    padding-top: 40rpx;
    padding-bottom: 20rpx;
    background: linear-gradient(#ff7d41,#ffac42 30%);
}

button {
    margin: 0;
    padding: 0;
}

.u-banner {
    position: relative;
    width: 100%;
}

.u-banner .e-talk {
    width: 100%;
}

.u-banner .link-rule {
    position: absolute;
    bottom: 254rpx;
    left: 490rpx;
    width: 140rpx;
    height: 30rpx;
}

.u-banner .link-home {
    position: absolute;
    bottom: 22rpx;
    right: 50%;
    margin-right: -218rpx;
    width: 437rpx;
    height: 112rpx;
}

.u-talk {
    width: 710rpx;
    margin: 0 auto;
    margin-top: 48rpx;
    padding-top: 30rpx;
    background-color: #fff;
    border-radius: 8rpx;
    overflow: hidden;
}

.e-title {
    padding: 0 36rpx;
}

.e-total-money {
    padding: 50rpx 36rpx;
}

.e-detail-money {
    padding: 0 30rpx;
    background-color: #f5f5f5;
}

.e-tab {
    height: 134rpx;
    display: flex;
    align-items: center;
    font-weight: bold;
}

.e-tab .success {
    width: 50%;
    border-right: 1rpx solid #ccc;
}

.e-tab .pedding {
    width: 50%;
}

.e-item {
    height: 112rpx;
    border-top: 1rpx solid #ccc;
}

.e-item>view:nth-of-type(1) image {
    width: 74rpx;
    height: 74rpx;
    border-radius: 50%;
    margin-right: 10rpx;
}

.e-item .f-care {
    width: 126rpx;
    height: 58rpx;
    background-color: #f23715;
    line-height: 58rpx;
    text-align: center;
    color: #fff;
    border-radius: 8rpx;
}

.t-tip {
    padding: 20rpx 0;
}

.fix-share {
    position: fixed;
    top: 20rpx;
    right: 0;
    width: 147rpx;
    height: 60rpx;
    border-radius: 30rpx 0 0 30rpx;
    background-color: #ffcf05;
    font-size: 26rpx;
    color: #ff1c4b;
    text-align: center;
    line-height: 60rpx;
}

.fix-share button {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
}