.input-wrap {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 600rpx;
    padding: 20rpx;
}

.ipt {
    width: 50%;
    background: #ddd;
    box-sizing: border-box;
    border-radius: 40rpx;
    padding: 30rpx;
}

.pic {
    position: fixed;
    top: 0;
    right: 0;
    left: 0;
    bottom: 100rpx;
    display: flex;
    align-items: center;
    overflow: hidden;
    background: rgba(0,0,0,.5);
}