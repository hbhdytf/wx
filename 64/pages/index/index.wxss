page {
    height: 100%;
    background-color: #f6f6f6;
}

.theme-list {
    background: #fff;
    padding-top: 10rpx;
}

.theme-list .title {
}

.theme-list .theme-item {
    overflow: hidden;
    box-sizing: border-box;
    padding: 20rpx;
    background: #fff;
}

.theme-list .theme-item .pic {
    width: 100%;
    vertical-align: top;
}

.theme-list .theme-item .theme-show {
    position: relative;
}

.theme-list .theme-item .theme-show .pic {
    width: 100%;
}

.theme-list .theme-item .theme-show .tit {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    line-height: 60rpx;
    padding: 12rpx;
    font-size: 34rpx;
    background: rgba(0,0,0,.6);
    color: #fff;
    box-sizing: border-box;
}

.theme-list .theme-item .inline-wrap {
    height: 220rpx;
}

.theme-list .theme-item .title {
    font-size: 36rpx;
    text-align: justify;
    margin-bottom: 20rpx;
    padding: 0 10rpx;
    line-height: 54rpx;
    max-height: 160rpx;
    overflow: hidden;
}

.theme-list .theme-item .title.inline {
    width: 460rpx;
    height: 160rpx;
    vertical-align: middle;
    overflow: hidden;
    text-overflow: ellipsis;
    display: inline-block;
    margin-right: 24rpx;
}

.theme-list .theme-item .inline-wrap .pic-one {
    display: inline-block;
    width: 205rpx;
    height: 205rpx;
    vertical-align: middle;
}

.theme-list .theme-item .pic-list {
    white-space: nowrap;
    margin-bottom: 24rpx;
    margin: 0 12rpx 24rpx 14rpx;
}

.theme-list .theme-item .pic-list .one {
    display: inline-block;
    width: 226rpx;
    height: 226rpx;
    margin-right: 8rpx;
    overflow: hidden;
    background: url(http://image.guang.j.cn/static/imgs/tashequ/morentu.png) no-repeat #ddd;
    background-size: 100%;
}

.theme-list .theme-item .pic-list .one:last {
    margin-right: 0;
}

.theme-list .theme-item .pic-list .img {
    width: 226rpx;
    height: 226rpx;
}

.theme-list .theme-item .bottom {
    border-top: 1px solid #ddd;
    padding-top: 15rpx;
}

.theme-list .theme-item .bottom .fr {
    float: right;
    vertical-align: middle;
    margin-top: 16rpx;
    color: #8589a2;
    line-height: 25rpx;
}

.theme-list .theme-item .bottom .user {
    vertical-align: middle;
    color: #5c607d;
}

.theme-list .theme-item .bottom .icon-view {
    width: 37rpx;
    height: 25rpx;
    vertical-align: top;
}

.theme-list .theme-item .bottom .icon-comment {
    width: 25rpx;
    height: 25rpx;
    vertical-align: top;
}

.theme-list .theme-item .bottom .user-header {
    width: 64rpx;
    height: 64rpx;
    border-radius: 32rpx;
    vertical-align: middle;
}

.updata-tip {
    position: absolute;
    width: 100%;
    left: 0;
    z-index: 2;
    height: 60rpx;
    line-height: 60rpx;
    background: #f6f6f6;
    color: #e10029;
    animation: showHide 2s;
    text-align: center;
}

